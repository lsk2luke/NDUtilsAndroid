<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlueGray_Pressed" />
            <stroke android:width="@dimen/size1" android:color="@color/colorBlueGrayDark" />
            <corners android:radius="@dimen/size2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:left="@dimen/size4" android:right="@dimen/size4"/>
            <solid android:color="@color/colorBlueGray" />
            <stroke android:width="@dimen/size1" android:color="@color/colorBlueGrayDark" />
            <corners android:radius="@dimen/size2" />
        </shape>
    </item>
</selector>